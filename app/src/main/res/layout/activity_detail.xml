<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/detailImage"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/fogoisland"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/nameLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="700"
                        android:layout_gravity="left"
                        android:text="Food Name"
                        android:textColor="#424242"
                        android:textSize="20sp"
                        android:letterSpacing=".05"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"/>

                    <RatingBar
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="10dp"
                        android:rating="5"
                        android:max="5"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleSmall"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/detailDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:text="@string/description"
                        android:textSize="13sp"
                        android:textColor="#707070"
                        android:letterSpacing=".05"
                        android:fontFamily="@font/roboto"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing=".05"
                        android:text="Amount"
                        android:textColor="#424242"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="3dp"
                        android:text="CAD"
                        android:textColor="#003049"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"/>

                    <TextView
                        android:id="@+id/initPriceLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#003049"
                        android:text="5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto"
                        android:gravity="start"
                        android:letterSpacing=".05"
                        android:paddingLeft="10dp"
                        android:text="@string/vary"
                        android:textColor="#707070"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:paddingStart="10dp"
                android:text="Amenities"
                android:letterSpacing=".05"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/pay_bg"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free Wifi Internet Access"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:letterSpacing=".05"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In-Room Tablets"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:letterSpacing=".05"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Purification"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:letterSpacing=".05"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rollaway Tent"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:letterSpacing=".05"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View More"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="10dp"
                    android:letterSpacing=".05"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="right"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:paddingStart="10dp"
                android:text="Date of Travel"
                android:letterSpacing=".05"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Check In - Check Out"
                    android:letterSpacing=".05"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:id="@+id/show_selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:letterSpacing=".05"
                android:textSize="16sp"
                android:textColor="#003049"
                android:textStyle="bold"/>

            <!--button to open the material design date picker dialog-->
            <Button
                android:id="@+id/pick_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Choose Date"
                android:textSize="13sp"
                android:onClick="totalPrice"
                android:background="@drawable/btn_bg"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:paddingStart="10dp"
                android:text="Days of Travel"
                android:letterSpacing=".05"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/pay_bg">

                    <Button
                        android:id="@+id/decrementButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="decrement"
                        android:text="-"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto"
                        android:backgroundTint="#FFFFFF"/>


                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center|start"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/incrementButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="increment"
                        android:text="+"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto"
                        android:backgroundTint="#FFFFFF"/>
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:paddingStart="10dp"
                android:text="Know Your Price"
                android:letterSpacing=".05"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="13sp"
                android:onClick="totalPrice"
                android:background="@drawable/btn_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAD"
                android:layout_marginLeft="155dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/priceLbl"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textColor="#000000">
            </TextView>
        </LinearLayout>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:paddingStart="10dp"
                android:text="Types of Room Available"
                android:letterSpacing=".05"
                android:textSize="16sp"
                android:textColor="#000000"/>
        </LinearLayout>



        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp">


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:gravity="left">
                <RadioButton
                    android:id="@+id/standardBtn"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text"
                    android:elevation="4dp"
                    android:text="Standard"
                    android:letterSpacing=".05"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:onClick="checkStandard"/>
                <RadioButton
                    android:id="@+id/deluxeBtn"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text"
                    android:elevation="4dp"
                    android:text="Deluxe"
                    android:letterSpacing=".05"

                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="checkDeluxe"/>
                <RadioButton
                    android:id="@+id/suiteBtn"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text"
                    android:elevation="4dp"
                    android:text="Suite"
                    android:letterSpacing=".05"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="checkSuite"/>
                <RadioButton
                    android:id="@+id/connectBtn"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text"
                    android:elevation="4dp"
                    android:text="Connecting"
                    android:letterSpacing=".05"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"

                    android:onClick="checkConnect"/>
                <RadioButton
                    android:id="@+id/accessibleBtn"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text"
                    android:elevation="4dp"
                    android:text="Accessible"
                    android:letterSpacing=".05"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="checkAccessible"/>
                <RadioButton
                    android:id="@+id/jointBtn"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text"
                    android:elevation="4dp"
                    android:text="Joint"
                    android:letterSpacing=".05"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="jointConnect"/>
            </RadioGroup>
        </HorizontalScrollView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:background="@drawable/pay_bg"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/roomDescTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Room Description"
                android:layout_margin="20dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Your Hotel and other nearby hotels"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/map1"
                android:layout_marginTop="20dp">

            </ImageView>

            <Button
                android:id="@+id/searchHotelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Search on Map"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                android:background="@drawable/btn_bg"/>


        </LinearLayout>


        <Button
            android:id="@+id/insertBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/roboto"
            android:letterSpacing=".05"
            android:text="BOOK NOW" />
    </LinearLayout>
</ScrollView>

